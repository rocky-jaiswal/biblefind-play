# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                             controllers.Application.index
GET     /books                        controllers.Application.books
GET     /chapters/:book               controllers.Application.chapters(book: String)
GET     /verses/:book/:chapter        controllers.Application.verses(book: String, chapter: Int)
GET     /verse/:book/:chapter/:verse  controllers.Application.verse(book: String, chapter: Int, verse: Int)

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.at(path="/public", file)
